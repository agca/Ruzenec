        <item name="colorPrimaryDark">@color/bolestBar</item>
        <item name="colorAccent">@color/bolestAccent</item>
    </style>

    <style name="Slava" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/slavaText</item>
        <item name="colorPrimaryDark">@color/slavaBar</item>
        <item name="colorAccent">@color/slavaAccent</item>
    </style>

    <style name="Svetlo" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/svetloBar</item>
        <item name="colorPrimaryDark">@color/svetloBar</item>
        <item name="colorAccent">@color/svetloAccent</item>
    </style>

</resources>
